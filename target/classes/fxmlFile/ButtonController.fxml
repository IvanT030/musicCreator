<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="detailVBox" prefHeight="110.0" prefWidth="140.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.AudioController">
    <children>
        <Label prefHeight="42.0" prefWidth="78.0" text="Adjust Speed:" />
        <HBox spacing="10">
            <Slider fx:id="speedSlider" blockIncrement="0.1" majorTickUnit="0.5" max="3.0" min="0.5" showTickLabels="true" showTickMarks="true" value="1.0" />
        </HBox>
        <TextField fx:id="speedTextField" prefWidth="114.0" text="1.0" />
        <HBox spacing="10">
            <Button onAction="#handleConfirm" text="Confirm" />
            <Button onAction="#handleCancel" text="Cancel" />
        </HBox>
    </children>
</VBox>
